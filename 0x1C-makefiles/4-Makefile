# Create a makefile

CC=gcc
# the compiler to be used

SRC=main.c school.c
# all the .c file

OBJ=$(SRC:%.c=%.o)
# the .o files

NAME=school
# the name of the executable

RM=rm -f

CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RN) *~ $(NAME)

oclean:
	$(RN) $(OBJ)

fclean: clean oclean

re: oclean all
